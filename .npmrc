# NPM Configuration for js2uri

# Enforce engine requirements
engine-strict=true

# Security: Enable audit checks during install
audit=true
audit-level=moderate

# Security: Require package-lock.json and fail if out of sync
package-lock=true

# Security: Enforce proper peer dependency handling
legacy-peer-deps=false

# Security: Disable automatic script execution during install
ignore-scripts=false
# Note: Set to true only if you want to block all install scripts

# Performance: Use faster DNS resolution
prefer-online=false

# Security: Verify package signatures (npm 9+)
# Commented out - requires npm registry support
# verify-signatures=true

# Publishing: Require 2FA for publishing (informational - set in npm profile)
# auth-type=legacy

# Prevent accidental publishing of private packages
# (not applicable here but good practice)
# publish-tag=latest

# Always use https for registry
registry=https://registry.npmjs.org/

# Timeout settings (prevent hanging)
fetch-timeout=60000
fetch-retries=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
